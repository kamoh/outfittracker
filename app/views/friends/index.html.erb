<h1>Your Friends</h1>

<% if @friends.any? %>
  <div>
    <% @friends.each do |friend| %>
      <div>
        <%= link_to friend.name, user_friend_path(@user, friend) %>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>
    <%= @user.name %>, you haven't added any friends yet, go add some <%= link_to "here!", new_user_friend_path(@user) %>
  </h3>
<% end %>